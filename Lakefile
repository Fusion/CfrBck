Task.build
    puts "Building C compression library: miniz; S3 gateway"
    `cd src/C && gcc -I/usr/local/opt/openssl/include -c miniz.c cfrminiz.c cfrs3helper.c && gcc -shared -lcrypto -lcurl -o libminizs3.so cfrminiz.o cfrs3helper.o`
    `cp src/C/libminizs3.so . && cd ../..`

Task.install
    `sudo cp cfrbck /usr/local/bin/cfrbck`
    `sudo cp src/man/cfrbck /usr/local/share/man/man1/cfrbck.1`

Task.cleantests
    `rm -rf bck`
    `rm -rf rst`
